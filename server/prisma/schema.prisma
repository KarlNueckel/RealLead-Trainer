// Prisma schema for RealLead Trainer

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// üó£Ô∏è Store conversation transcripts
model Conversation {
  id          String   @id @default(cuid())
  userId      String?  // Optional: for future user accounts
  transcript  String   @db.Text
  duration    Int?     // Call duration in seconds
  scenario    String?  // e.g., "cold-call", "follow-up", "demo"
  difficulty  String?  // e.g., "easy", "medium", "hard"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

// üìÑ Store uploaded scripts for training
model Script {
  id          String   @id @default(cuid())
  userId      String?  // Optional: for future user accounts
  title       String?
  description String?  @db.Text
  fileUrl     String
  fileName    String
  fileSize    Int?
  uploadedAt  DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([uploadedAt])
}

// üìà Training steps and progression per path (e.g., "Seller Lead - Referral")
model TrainingStep {
  id        String   @id @default(cuid())
  userId    String?  // Optional: tie to user later
  path      String   // e.g., "Seller Lead - Referral"
  name      String   // e.g., "Initial Call"
  status    String   // 'locked' | 'unlocked' | 'completed'
  score     Int?
  order     Int      // ordering within a path flow
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, path])
  @@unique([userId, path, name])
}

